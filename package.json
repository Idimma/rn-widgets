{
  "name": "@idimma/rn-widget",
  "version": "0.1.423",
  "description": "React Native components",
  "main": "lib/module",
  "module": "lib/module",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "./lib/module/index.js",
  "source": "src",
  "exports": {
    ".": {
      "types": "./lib/typescript/src/index.d.ts",
      "import": "./lib/module/index.js",
      "react-native": "./lib/module/index.js"
    }
  },
  "files": [
    "lib/typescript",
    "lib/module",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/*.spec.*",
    "!**/*.test.*",
    "!example",
    "!node_modules"
  ],
  "scripts": {
    "example": "yarn workspace @idimma/widget-example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Idimma/rn-widgets.git"
  },
  "author": "Idowu Emmanuel <idowu.immanuel17@gmail.com> (https://github.com/Idimma)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Idimma/rn-widgets/issues"
  },
  "homepage": "https://github.com/Idimma/rn-widgets#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.17.6",
    "@types/react": "^18.2.44",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.34.3",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "prettier": "^3.0.3",
    "react": "18.2.0",
    "react-native-builder-bob": "^0.20.0",
    "react-native-size-matters": "^0.4.2",
    "release-it": "^15.0.0",
    "typescript": "^5.2.2",
    "react-native": "0.74.2",
    "@expo/vector-icons": "^14.0.2",
    "expo-haptics": "^13.0.1",
    "expo-image": "^1.12.12",
    "expo-linear-gradient": "^13.0.2",
    "react-native-animatable": "^1.4.0",
    "react-native-lightbox": "^0.8.1",
    "react-native-raw-bottom-sheet": "^3.0.0",
    "react-native-safe-area-context": "^4.10.7"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "@types/react": "*",
    "react": "*",
    "react-dom": "*",
    "react-native": "*",
    "react-native-safe-area-context": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
  },
  "directories": {
    "example": "example"
  },
  "create-react-native-library": {
    "type": "library",
    "version": "0.38.1"
  }
}
