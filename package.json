{
  "name": "@idimma/rn-widget",
  "version": "0.1.5",
  "description": "React Native components",
  "main": "lib/module",
  "module": "lib/module",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "./lib/module/index.js",
  "source": "src",
  "exports": {
    ".": {
      "types": "./lib/typescript/src/index.d.ts",
      "import": "./lib/module/index.js",
      "react-native": "./lib/module/index.js"
    }
  },
  "files": [
    "lib/typescript",
    "lib/module",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/*.spec.*",
    "!**/*.test.*",
    "!example",
    "!node_modules"
  ],
  "scripts": {
    "example": "npm run --prefix example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it",
    "postinstall": "echo \"Warning: Support for Expo SDK 52 may be deprecated in future versions. Consider upgrading to SDK 53.\"",
    "ci": "npm run lint && npm run typecheck && npm test",
    "prebuild-check": "npx expo prebuild --no-install --platform all"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Idimma/rn-widgets.git"
  },
  "author": "Idowu Emmanuel <idowu.immanuel17@gmail.com> (https://github.com/Idimma)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Idimma/rn-widgets/issues"
  },
  "homepage": "https://github.com/Idimma/rn-widgets#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "react-native-animatable": "1.4.0",
    "react-native-lightbox-v2": "0.9.0",
    "react-native-raw-bottom-sheet": "3.0.0",
    "react-native-safe-area-context": "4.8.2 || 4.11.0",
    "react-native-size-matters": "0.4.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "19.5.0",
    "@evilmartians/lefthook": "1.7.18",
    "@react-native/eslint-config": "0.74.83",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "29.5.13",
    "@types/lodash": "4.17.10",
    "@types/react": "19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "commitlint": "19.5.0",
    "del-cli": "5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.1",
    "jest": "29.7.0",
    "jest-expo": "51.0.0",
    "lodash": "4.17.21",
    "prettier": "3.3.3",
    "react-native-builder-bob": "0.21.0",
    "react-native-typescript-transformer": "^1.2.10",
    "release-it": "^19.0.1",
    "typescript": "5.6.2"
  },
  "resolutions": {
    "@types/react": "19.0.0",
    "@types/react-native": "0.79.0",
    "@types/react-native-safe-area-context": "4.3.0",
    "@types/react-native-gesture-handler": "2.5.0",
    "@types/react-native-reanimated": "3.1.0",
    "@types/jest": "29.5.13",
    "@types/lodash": "4.17.10",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0"
  },
  "peerDependencies": {
    "@expo/vector-icons": "14.0.0",
    "expo-haptics": "13.0.0",
    "expo-image": "1.12.1 || 2.0.2",
    "expo-linear-gradient": "12.7.2 || 14.0.0",
    "react": "18.2.0 || 18.3.1 || ^19.0.0",
    "react-native": "0.74.5 || 0.79.0",
    "react-native-gesture-handler": "2.16.1 || 2.22.0",
    "react-native-reanimated": "3.6.2 || 3.15.0",
    "react-native-safe-area-context": "4.8.2 || 4.11.0"
  },
  "peerDependenciesMeta": {
    "react-native-gesture-handler": {
      "optional": true
    },
    "react-native-reanimated": {
      "optional": true
    },
    "@expo/vector-icons": {
      "optional": true
    },
    "expo-haptics": {
      "optional": true
    },
    "expo-image": {
      "optional": true
    },
    "expo-linear-gradient": {
      "optional": true
    }
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "coverageDirectory": "coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "./node_modules/jest-expo/jest/setup.js",
      "./jest.setup.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "directories": {
    "example": "example"
  },
  "create-react-native-library": {
    "type": "library",
    "version": "0.38.1"
  }
}
